{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "module": "CommonJS",
        "outDir": "./build/",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}